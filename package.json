{
  "name": "hello-npm-script",
  "version": "0.1.0",
  "config": {
    "port": 3000
  },
  "description": "hello npm script",
  "main": "index.js",
  "scripts": {
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint *.js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint *.less",
    "lint:json": "jsonlint --quiet *.json",
    "lint:markdown": "markdownlint --config .markdownlint.json *.md --ignore npm_script_study",
    "watch": "npm-run-all --parallel watch:*",
    "watch:test": "npm run test -- --watch",
    "watch:lint": "onchange -i \"**/**.js\" \"**/*.less\" -v -- npm run lint",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test mocha tests/",
    "cover": "node scripts/cover.js",
    "cover:serve": "scripty",
    "cover:open": "scripty",
    "client": "npm-run-all --parallel client:*",
    "browser:client": "browser-sync start --server client/ --files \"**/*.css, **/*.html, **/*.js\"",
    "client:reload-server": "livereload client/",
    "client:static-server": "http-server client/",
    "dummy": "echo $PATH $npm_package_name"
  },
  "keywords": [
    "npm",
    "script"
  ],
  "author": "ying.ye <yeying0827@126.com> (https://github.com/yeying0827)",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "cpr": "^3.0.1",
    "cross-env": "^7.0.2",
    "cross-var": "^1.1.0",
    "eslint": "^7.0.0",
    "http-server": "^0.12.3",
    "husky": "^4.2.5",
    "jsonlint": "^1.6.3",
    "lint-staged": "^10.2.11",
    "livereload": "^0.9.1",
    "make-dir-cli": "^2.0.0",
    "markdownlint-cli": "^0.23.1",
    "mocha": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "onchange": "^7.0.2",
    "opn-cli": "^5.0.0",
    "rimraf": "^3.0.2",
    "scripty": "^2.0.0",
    "shelljs": "^0.8.4",
    "stylelint": "^13.5.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      ".*.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.less": "stylelint",
    "*.css": "stylelint",
    "*.json": "jsonlint --quiet",
    "*.md": "markdownlint --config .markdownlint.json"
  }
}
