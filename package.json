{
  "name": "hello-npm-script",
  "version": "0.1.0",
  "config": {
    "port": 3000
  },
  "description": "hello npm script",
  "main": "index.js",
  "scripts": {
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint *.js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint *.less",
    "lint:json": "jsonlint --quiet *.json",
    "lint:markdown": "markdownlint --config .markdownlint.json *.md",
    "mocha:watch": "npm run mocha -- --watch",
    "pretest": "npm run lint",
    "test": "mocha tests/",
    "cover": "nyc --reporter=html npm test",
    "cover:cleanup": "rm -rf coverage && rm -rf .nyc_output",
    "cover:archive": "mkdir -p coverage_archive/$npm_package_version && cp -r coverage/* coverage_archive/$npm_package_version",
    "cover:serve": "http-server coverage_archive/$npm_package_version -p $npm_package_config_port",
    "cover:open": "open-cli http://localhost:$npm_package_config_port",
    "postcover": "npm-run-all cover:archive cover:cleanup --parallel cover:serve cover:open",
    "dummy": "echo $PATH $npm_package_name"
  },
  "keywords": [
    "npm",
    "script"
  ],
  "author": "ying.ye <yeying0827@126.com> (https://github.com/yeying0827)",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.0.0",
    "http-server": "^0.12.3",
    "jsonlint": "^1.6.3",
    "markdownlint-cli": "^0.23.1",
    "mocha": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "opn-cli": "^5.0.0",
    "stylelint": "^13.5.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      ".*.js"
    ]
  }
}
